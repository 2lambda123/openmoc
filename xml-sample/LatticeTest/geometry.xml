<?xml version="1.0"?>

<!-- Simple 2x2 lattice of identical pin cells. Each lattice cell is 2cm x 2cm
	 and each pin has a diameter of 0.8.
-->

<geometry>

<!-- Definition of Cells -->
  <cell id="6" fill="3" surfaces="7 -8 9 -10"/>
  <cell id="1" universe="1" material="1" surfaces="-1"/>
  <cell id="2" universe="1" material="2" surfaces="1"/>
  <cell id="5" universe="3" fill="10" surfaces="3 -4 5 -6"/>
  <cell id="3" universe="3" material="1" surfaces="2"/>
  <cell id="4" universe="3" material="1" surfaces="-2 -3 4 -5 6"/>


<!-- Definition of Lattices -->
  <lattice id="10">
    <type>rectangular</type>
    <dimension>2 2</dimension>
    <width>2.0 2.0</width>
    <universes>
      1 1
      1 1
    </universes>
  </lattice>

  
<!-- Defition of Surfaces -->
  <surface id="1" type="circle" coeffs="0 0 0.8" />
  <surface id="2" type="circle" coeffs="0 0 2.25" />
  <surface id="3" type="x-plane" coeffs="-2.0" boundary="reflective" />
  <surface id="4" type="x-plane" coeffs="2.0" boundary="reflective" />
  <surface id="5" type="y-plane" coeffs="-2.0" boundary="reflective" />
  <surface id="6" type="y-plane" coeffs="2.0" boundary="reflective" />
  <surface id="7" type="x-plane" coeffs="-6.0" boundary="reflective" />
  <surface id="8" type="x-plane" coeffs="6.0" boundary="reflective" />
  <surface id="9" type="y-plane" coeffs="-6.0" boundary="reflective" />
  <surface id="10" type="y-plane" coeffs="6.0" boundary="reflective" />
    
</geometry>
